{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Theme",
  "type": "object",
  "allOf": [
    {
      "if": {
        "properties": {
          "version": {
            "const": 1
          }
        },
        "required": ["version"]
      },
      "then": {
        "$ref": "theme.schema.v1.json"
      }
    },
    {
      "if": {
        "properties": {
          "version": {
            "const": 0
          }
        },
        "required": ["version"]
      },
      "then": {
        "$ref": "theme.schema.v0.json"
      }
    },
    {
      "if": {
        "not": {
          "required": ["version"]
        }
      },
      "then": {
        "$ref": "theme.schema.v0.json"
      }
    },
    {
      "if": {
        "properties": {
          "version": {
            "type": "integer",
            "not": {
              "enum": [0, 1]
            }
          }
        },
        "required": ["version"]
      },
      "then": {
        "properties": {
          "version": {
            "type": "integer",
            "enum": [0, 1],
            "description": "Unsupported version. Only versions 0 and 1 are supported."
          }
        }
      }
    }
  ]
}
