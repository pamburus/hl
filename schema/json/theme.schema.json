{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Theme",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "$palette": {
      "type": "array"
    },
    "version": {},
    "tags": {
      "type": "array"
    },
    "styles": {
      "type": "object"
    },
    "elements": {
      "type": "object"
    },
    "levels": {
      "type": "object"
    },
    "indicators": {
      "type": "object"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^1\\.(0|[1-9][0-9]*)$"
          }
        },
        "required": ["version"]
      },
      "then": {
        "$ref": "https://raw.githubusercontent.com/pamburus/hl/42eb24f79f492b02278057e5d7f3cb3bb2e89b9e/schema/json/theme.schema.v1.json"
      }
    },
    {
      "if": {
        "not": {
          "required": ["version"]
        }
      },
      "then": {
        "$ref": "https://raw.githubusercontent.com/pamburus/hl/42eb24f79f492b02278057e5d7f3cb3bb2e89b9e/schema/json/theme.schema.v0.json"
      }
    }
  ]
}
