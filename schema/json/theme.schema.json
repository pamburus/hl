{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$ref": "#/definitions/theme",
  "definitions": {
    "theme": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string",
          "format": "uri",
          "title": "JSON Schema Reference"
        },
        "$palette": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/color"
          },
          "title": "Optional YAML anchors for colors"
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tag"
          }
        },
        "styles": {
          "$ref": "#/definitions/styles"
        },
        "elements": {
          "$ref": "#/definitions/elements"
        },
        "levels": {
          "$ref": "#/definitions/levels"
        },
        "indicators": {
          "$ref": "#/definitions/indicators"
        }
      },
      "required": [],
      "title": "Theme"
    },
    "tag": {
      "type": "string",
      "enum": ["dark", "light", "16color", "256color", "truecolor"]
    },
    "mode": {
      "type": "string",
      "enum": [
        "bold",
        "faint",
        "italic",
        "underline",
        "slow-blink",
        "rapid-blink",
        "reverse",
        "conceal",
        "crossed-out"
      ]
    },
    "mode-diff": {
      "oneOf": [
        {
          "$ref": "#/definitions/mode"
        },
        {
          "type": "string",
          "pattern": "^[+-](bold|faint|italic|underline|slow-blink|rapid-blink|reverse|conceal|crossed-out)$"
        }
      ]
    },
    "role": {
      "type": "string",
      "enum": [
        "default",
        "primary",
        "secondary",
        "emphasized",
        "muted",
        "accent",
        "accent-secondary",
        "syntax",
        "status",
        "info",
        "warning",
        "error"
      ]
    },
    "styles": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/definitions/role"
      },
      "additionalProperties": {
        "$ref": "#/definitions/style-with-base"
      },
      "title": "Semantic Styles"
    },
    "elements": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "input": {
          "$ref": "#/definitions/element-style"
        },
        "input-number": {
          "$ref": "#/definitions/element-style"
        },
        "input-number-inner": {
          "$ref": "#/definitions/element-style"
        },
        "input-name": {
          "$ref": "#/definitions/element-style"
        },
        "input-name-inner": {
          "$ref": "#/definitions/element-style"
        },
        "time": {
          "$ref": "#/definitions/element-style"
        },
        "level": {
          "$ref": "#/definitions/element-style"
        },
        "level-inner": {
          "$ref": "#/definitions/element-style"
        },
        "logger": {
          "$ref": "#/definitions/element-style"
        },
        "logger-inner": {
          "$ref": "#/definitions/element-style"
        },
        "caller": {
          "$ref": "#/definitions/element-style"
        },
        "caller-inner": {
          "$ref": "#/definitions/element-style"
        },
        "message": {
          "$ref": "#/definitions/element-style"
        },
        "message-delimiter": {
          "$ref": "#/definitions/element-style"
        },
        "field": {
          "$ref": "#/definitions/element-style"
        },
        "key": {
          "$ref": "#/definitions/element-style"
        },
        "array": {
          "$ref": "#/definitions/element-style"
        },
        "object": {
          "$ref": "#/definitions/element-style"
        },
        "string": {
          "$ref": "#/definitions/element-style"
        },
        "number": {
          "$ref": "#/definitions/element-style"
        },
        "boolean": {
          "$ref": "#/definitions/element-style"
        },
        "boolean-false": {
          "$ref": "#/definitions/element-style"
        },
        "boolean-true": {
          "$ref": "#/definitions/element-style"
        },
        "null": {
          "$ref": "#/definitions/element-style"
        },
        "ellipsis": {
          "$ref": "#/definitions/element-style"
        }
      },
      "required": [],
      "title": "Element Styles"
    },
    "style": {
      "type": "object",
      "properties": {
        "modes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mode-diff"
          }
        },
        "foreground": {
          "$ref": "#/definitions/color"
        },
        "background": {
          "$ref": "#/definitions/color"
        }
      },
      "title": "Style"
    },
    "style-with-base": {
      "allOf": [
        {
          "$ref": "#/definitions/style"
        }
      ],
      "properties": {
        "style": {
          "$ref": "#/definitions/role"
        }
      },
      "unevaluatedProperties": false,
      "title": "Style with Base Reference"
    },
    "element-style": {
      "allOf": [
        {
          "$ref": "#/definitions/style"
        }
      ],
      "properties": {
        "style": {
          "$ref": "#/definitions/role"
        }
      },
      "unevaluatedProperties": false,
      "title": "Element Style"
    },
    "color": {
      "oneOf": [
        {
          "$ref": "#/definitions/ansi-basic-color"
        },
        {
          "$ref": "#/definitions/ansi-extended-color"
        },
        {
          "$ref": "#/definitions/rgb-color"
        }
      ]
    },
    "ansi-basic-color": {
      "type": "string",
      "enum": [
        "default",
        "black",
        "red",
        "green",
        "yellow",
        "blue",
        "magenta",
        "cyan",
        "white",
        "bright-black",
        "bright-red",
        "bright-green",
        "bright-yellow",
        "bright-blue",
        "bright-magenta",
        "bright-cyan",
        "bright-white"
      ]
    },
    "ansi-extended-color": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    },
    "rgb-color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$"
    },
    "indicators": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sync": {
          "$ref": "#/definitions/indicators-sync"
        }
      },
      "required": [],
      "title": "Indicators"
    },
    "indicators-sync": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "synced": {
          "$ref": "#/definitions/indicator"
        },
        "failed": {
          "$ref": "#/definitions/indicator"
        }
      },
      "required": [],
      "title": "Sync Indicator Settings"
    },
    "indicator": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": {
          "type": "string"
        },
        "inner": {
          "$ref": "#/definitions/indicator-style"
        },
        "outer": {
          "$ref": "#/definitions/indicator-style"
        }
      },
      "required": [],
      "title": "Indicator Settings"
    },
    "indicator-style": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "style": {
          "$ref": "#/definitions/style"
        }
      },
      "required": [],
      "title": "Indicator Style Settings"
    },
    "levels": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "trace": {
          "$ref": "#/definitions/elements"
        },
        "debug": {
          "$ref": "#/definitions/elements"
        },
        "info": {
          "$ref": "#/definitions/elements"
        },
        "warning": {
          "$ref": "#/definitions/elements"
        },
        "error": {
          "$ref": "#/definitions/elements"
        }
      },
      "required": [],
      "title": "Element Settings per Logging Level"
    }
  }
}
