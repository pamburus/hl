{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/config",
    "definitions": {
        "config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri",
                    "title": "JSON Schema URI"
                },
                "time-format": {
                    "type": "string"
                },
                "time-zone": {
                    "type": "string"
                },
                "fields": {
                    "$ref": "#/definitions/fields"
                },
                "formatting": {
                    "$ref": "#/definitions/formatting"
                },
                "concurrency": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "theme": {
                    "type": "string"
                }
            }
        },
        "fields": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "predefined": {
                    "$ref": "#/definitions/predefined-fields"
                },
                "ignore": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "hide": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "predefined-fields": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "time": {
                    "$ref": "#/definitions/predefined-field-time"
                },
                "logger": {
                    "$ref": "#/definitions/predefined-field-logger"
                },
                "level": {
                    "$ref": "#/definitions/predefined-field-level"
                },
                "message": {
                    "$ref": "#/definitions/predefined-field-message"
                },
                "caller": {
                    "$ref": "#/definitions/predefined-field-caller"
                },
                "caller-file": {
                    "$ref": "#/definitions/predefined-field-caller-file"
                },
                "caller-line": {
                    "$ref": "#/definitions/predefined-field-caller-line"
                }
            }
        },
        "predefined-field-time": {
            "properties": {
                "show": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "never",
                        "always"
                    ]
                },
                "names": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "names"
            ]
        },
        "predefined-field-logger": {
            "$ref": "#/definitions/predefined-field"
        },
        "predefined-field-level": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "show": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "never",
                        "always"
                    ]
                },
                "variants": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "names": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "values": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "debug": {
                                        "$ref": "#/definitions/level-values"
                                    },
                                    "info": {
                                        "$ref": "#/definitions/level-values"
                                    },
                                    "warning": {
                                        "$ref": "#/definitions/level-values"
                                    },
                                    "error": {
                                        "$ref": "#/definitions/level-values"
                                    }
                                }
                            },
                            "level": {
                                "$ref": "#/definitions/level"
                            }
                        },
                        "required": [
                            "names"
                        ]
                    }
                }
            },
            "required": [
                "variants"
            ]
        },
        "predefined-field-message": {
            "$ref": "#/definitions/predefined-field"
        },
        "predefined-field-caller": {
            "$ref": "#/definitions/predefined-field"
        },
        "predefined-field-caller-file": {
            "$ref": "#/definitions/predefined-field"
        },
        "predefined-field-caller-line": {
            "$ref": "#/definitions/predefined-field"
        },
        "predefined-field": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "names": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "names"
            ]
        },
        "level": {
            "type": "string",
            "enum": [
                "debug",
                "info",
                "warning",
                "error"
            ]
        },
        "level-values": {
            "type": "array",
            "items": {
                "type": [
                    "string",
                    "integer"
                ]
            }
        },
        "formatting": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "flatten": {
                    "type": "string",
                    "enum": [
                        "never",
                        "always"
                    ]
                },
                "expansion": {
                    "$ref": "#/definitions/expansion"
                },
                "punctuation": {
                    "$ref": "#/definitions/punctuation"
                }
            }
        },
        "punctuation": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "logger-name-separator": {
                    "type": "string"
                },
                "field-key-value-separator": {
                    "type": "string"
                },
                "string-opening-quote": {
                    "type": "string"
                },
                "string-closing-quote": {
                    "type": "string"
                },
                "source-location-separator": {
                    "type": "string"
                },
                "hidden-fields-indicator": {
                    "type": "string"
                },
                "level-left-separator": {
                    "type": "string"
                },
                "level-right-separator": {
                    "type": "string"
                },
                "input-number-prefix": {
                    "type": "string"
                },
                "input-number-left-separator": {
                    "type": "string"
                },
                "input-number-right-separator": {
                    "type": "string"
                },
                "input-name-left-separator": {
                    "type": "string"
                },
                "input-name-right-separator": {
                    "type": "string"
                },
                "input-name-clipping": {
                    "type": "string"
                },
                "input-name-common-part": {
                    "type": "string"
                },
                "array-separator": {
                    "type": "string"
                }
            }
        },
        "expansion": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "mode": {
                    "$ref": "#/definitions/expansion-mode"
                },
                "profiles": {
                    "$ref": "#/definitions/expansion-profiles"
                }
            }
        },
        "expansion-mode": {
            "type": "string",
            "enum": [
                "never",
                "inline",
                "low",
                "medium",
                "high",
                "always"
            ]
        },
        "expansion-profiles": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "low": {
                    "$ref": "#/definitions/expansion-profile"
                },
                "medium": {
                    "$ref": "#/definitions/expansion-profile"
                },
                "high": {
                    "$ref": "#/definitions/expansion-profile"
                }
            }
        },
        "expansion-profile": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "multiline": {
                    "$ref": "#/definitions/expansion-multiline"
                },
                "thresholds": {
                    "$ref": "#/definitions/expansion-thresholds"
                }
            }
        },
        "expansion-multiline": {
            "type": "string",
            "enum": [
                "standard",
                "disabled",
                "inline"
            ]
        },
        "expansion-thresholds": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "global": {
                    "$ref": "#/definitions/expansion-threshold"
                },
                "cumulative": {
                    "$ref": "#/definitions/expansion-threshold"
                },
                "message": {
                    "$ref": "#/definitions/expansion-threshold"
                },
                "field": {
                    "$ref": "#/definitions/expansion-threshold"
                }
            }
        },
        "expansion-threshold": {
            "type": "integer",
            "minimum": 0
        }
    }
}